@model EmsEntities.EmployeeEntities

@Html.AntiForgeryToken()

@Html.HiddenFor(m => m.EId)
<div class="form-group">
    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.Label("Birth Date", htmlAttributes: new { @class = "control-label col-md-2" })
    @*@Html.LabelFor(m=>m.BirthDate, htmlAttributes: new { @class = "control-label col-md-2" })*@
    <div class="col-md-10">
        @*@Html.TextBoxFor(model => model.BirthDate, String.Format("{0:d}", Model.BirthDate, new { @class = "datefield", type = "date" }))*@
        @*@Html.TextBox("SelectedDate", "", new { @readonly = "readonly" })//jQuery UI DatePicker (Calendar)*@
        @Html.EditorFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control" } })@*@value = DateTime.Now, @readonly = "readonly", placeholder="Enter your date of birth"*@
